page {
  background-color: #f7f8fa;
}
view.header {
  height: 250rpx;
  text-align: center;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  padding-top: 120rpx;
}
view.header .backButton {
  position: fixed;
  left: 30rpx;
  top: 97rpx;
  z-index: 2000;
  background-color: rgba(54, 57, 56, 0.6);
  padding: 13rpx 20rpx;
  border-radius: 16rpx;
}
.body {
  padding-bottom: 30rpx;
}
.body .merchantInfo {
  width: 95%;
  margin: 0px auto;
  margin-top: 30rpx;
  background-color: white;
  box-shadow: 0px 5px 12px #ebedf0;
  text-align: center;
  border-radius: 16rpx;
  padding: 35rpx 0rpx;
}
.body .merchantInfo .merchantDetail {
  width: 97%;
  margin: 0px auto;
  border-radius: 16rpx;
  display: flex;
  align-items: top;
  justify-content: space-between;
}
.body .merchantInfo .merchantDetail .left {
  margin-left: 25rpx;
}
.body .merchantInfo .merchantDetail .left image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 25rpx;
  box-shadow: 0px 3px 5px #ebedf0;
}
.body .merchantInfo .merchantDetail .right {
  text-align: right;
  margin-right: 25rpx;
}
.body .merchantInfo .merchantDetail .right .h4 {
  margin-top: 15rpx;
  font-weight: 400;
  color: #9f9f9f;
}
.body .merchantInfo .merchantDetail .right button {
  display: inline-block;
  width: 70%;
  margin-top: 30rpx;
  background: rgba(54, 148, 114, 0.8);
  border-radius: 20rpx;
  font-family: PingFangSC;
  font-size: 25rpx;
  color: #fafcfc;
  padding: 5rpx 0rpx 5rpx 0rpx;
}
.body .merchantInfo view.info_row {
  display: flex;
  width: 100%;
  padding: 40rpx 0rpx;
  margin-left: -18rpx;
  line-height: 0.8em;
}
.body .merchantInfo view.info_row view.info_column {
  flex: 33%;
  max-width: 33%;
  margin-right: 4rpx;
  text-align: center;
}
.body .merchantInfo view.info_row view.info_column .title {
  font-family: PingFangSC;
  font-size: 20rpx;
  color: #9f9f9f;
}
.body .merchantInfo view.info_row view.info_column .icon {
  margin-top: 20rpx;
}
.body .merchantInfo view.info_row view.info_column view.desc {
  margin-top: 21rpx;
  font-family: PingFangSC;
  font-weight: 450;
  font-size: 21rpx;
  color: #656565;
}
.body .merchantInfo view.info_row view.info_column view.vertical_line {
  border-right: 1px solid #d9d9d9;
  height: 20px;
  margin-top: -40px;
}
.body view.mainBody {
  width: 95%;
  margin: 0px auto;
  padding-bottom: 40px;
}
.body view.mainBody view.serviceRow {
  margin-top: 40rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 0px 5px 12px #ebedf0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 0px 15px 0px;
}
.body view.mainBody view.serviceRow view.left {
  flex: 27%;
  text-align: center;
}
.body view.mainBody view.serviceRow view.left image {
  width: 155rpx;
  height: 155rpx;
  border-radius: 30rpx;
  box-shadow: 0px 5px 12px #ebedf0;
}
.body view.mainBody view.serviceRow view.middle {
  color: #363938;
  text-align: left;
  flex: 55%;
}
.body view.mainBody view.serviceRow view.middle view.serviceTitle {
  font-size: 30rpx;
  font-weight: 400;
}
.body view.mainBody view.serviceRow view.middle .price {
  margin-top: 35rpx;
}
.body view.mainBody view.serviceRow view.right {
  flex: 16%;
  text-align: center;
  align-self: flex-end;
}
view.pics {
  margin: 0px auto;
}
view.pics swiper {
  background-color: white;
  text-align: center;
  height: 530rpx;
}
view.pics swiper-item .wrapper {
  width: 95%;
  height: 460rpx;
  margin: 0px auto;
  border-radius: 16rpx;
  box-shadow: 0px 5px 12px #ebedf0;
}
view.pics swiper-item .wrapper image {
  height: 440rpx;
  width: 100%;
}
view.billboard {
  background-color: white;
  border-radius: 15rpx;
  padding: 35rpx 40rpx 35rpx 40rpx;
}
view.billboard view.title {
  padding-bottom: 7px;
  margin-bottom: 5px;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  border-bottom: 1px solid #369472;
  width: 30%;
}
view.billboard text {
  font-family: PingFangSC;
  font-size: 14px;
  color: #656565;
  line-height: 2.5em;
}
