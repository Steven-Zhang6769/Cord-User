page {
  background-color: #f7f8fa;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  position: relative;
  left: 82rpx;
  top: 500rpx;
}
.index .swiper {
  margin: 0 auto;
}
.index .swiper swiper {
  margin: 0 auto;
  text-align: center;
  height: 610rpx;
}
.index .swiper swiper swiper-item .image {
  height: 100%;
  width: 100%;
}
.index .swiper swiper .filter {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 580px;
  background: linear-gradient(to bottom, rgba(247, 248, 250, 0) 94.5%, #f7f8fa 100%);
}
.index .search {
  margin-top: -90rpx;
}
.index .search .searchBackground {
  width: 102.2%;
  margin: 0 -20rpx 15rpx;
}
.index .search .searchBackground image {
  padding-left: 25rpx;
}
.index .search .searchBar {
  height: 78rpx;
  background-color: #fafcfc;
  box-shadow: 0 3px 5px #ebedf0;
  border-radius: 16rpx;
  font-family: PingFang SC;
  font-style: normal;
  font-weight: 300;
  font-size: 24rpx;
  padding-top: 17rpx;
  z-index: 100;
}
.index .search .searchText {
  padding-left: 35rpx;
  font-family: PingFang SC;
  font-size: 24rpx;
}
.index .search .searchCell {
  font-size: 26rpx;
}
.index .categorySelector {
  align-items: center;
  border-radius: 16rpx;
  margin: 0 auto 20rpx;
  width: 93%;
  background-color: #fafcfc;
  box-shadow: 0 5px 12px #ebedf0;
}
.index .categorySelector .wrapper {
  display: flex;
  justify-content: space-between;
  width: 90.5%;
  margin: 0 auto;
  padding: 25rpx 0;
}
.index .categorySelector .wrapper .column {
  text-align: center;
}
.index .categorySelector .wrapper .column .icon image {
  width: 145rpx;
  height: 145rpx;
}
.index .categorySelector .wrapper .column .text .title {
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #363938;
}
.index .categorySelector .wrapper .column .text .subTitle {
  margin-top: 5rpx;
  font-family: PingFangSC-Regular;
  font-size: 19rpx;
  color: #9f9f9f;
}
.index .body swiper {
  height: 650rpx !important;
}
.index .body swiper swiper-item {
  width: 610rpx !important;
  left: 75rpx;
  padding: 40rpx 0 70rpx;
}
.index .body swiper swiper-item.cur .row {
  width: 90%;
  transform: none;
  transition: all 0.2s ease-in;
}
.index .body swiper swiper-item .row {
  width: 91%;
  margin: 0 auto;
  border-radius: 15rpx;
  box-shadow: 0 5px 12px #ebedf0;
  background-color: white;
  transform: scale(1, 0.88);
  transition: all 0.2s ease-in;
  overflow: hidden;
}
.index .body swiper swiper-item .row .background {
  border-radius: 15rpx 15rpx 0 0;
  height: 250rpx;
}
.index .body swiper swiper-item .row .information {
  margin-top: 130rpx;
  box-shadow: 0 0 10px 10px rgba(255, 255, 255, 0.6);
  background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.6) 0%, #fafcfcef 82%);
  backdrop-filter: blur(3px);
  height: 170rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  padding: 10px 7px 13px 0;
  justify-content: space-between;
}
.index .body swiper swiper-item .row .information .left .image {
  margin-left: 20rpx;
  width: 135rpx;
  height: 135rpx;
  border-radius: 20rpx;
}
.index .body swiper swiper-item .row .information .right {
  text-align: right;
}
.index .body button::after {
  border: none;
}
